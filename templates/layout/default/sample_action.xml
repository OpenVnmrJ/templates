<actionpanel>
  <group size="540 20" fg="PlainText" bg="transparent" border="None" side="Top"
    justify="Left" tab="no" reference="acq_action" useref="no" >
   <button  loc="0 0" size="90 20" value="Sequence" 
      vc="dps" style="Plain"
      fg="black" bg="cyan" point="12" font="Dialog" />
   <button  loc="90 0" size="90 20" value="Hardware SU"
      vc="su" style="Plain"
      vq="acqmode"
      show="$VALUE=(acqmode='') if $VALUE=0 then $VALUE=-1 endif"
      fg="black" bg="yellow" point="12" font="Dialog" />
   <toggle loc="180 0" size="90 20" value="Lock Scan" 
      vc2="locki('stop') acqmode=''menu('main')"
      vc="lock_scan"      
      vq="acqmode" set="$VALUE=(acqmode='lock')"
      show="$VALUE=(acqmode=''or acqmode='lock') $VALUE=$VALUE*2-1"
      fg="black" bg="yellow" point="12"  style="Plain" font="Dialog" />
   <toggle loc="270 0" size="90 20" value="FID Scan" 
      vc2="aa acqmode=''wbs('') wnt('') wdone('') menu('main') nt=ntsave" 
      vc="repeat_scan"      
      vq="acqmode"    
      set="$VALUE=(acqmode='fidscan')"
      show="$VALUE=(acqmode=''or acqmode='fidscan') $VALUE=$VALUE*2-1"
      fg="black" bg="green" point="12" style="Plain" font="Dialog" />
   <button  loc="360 0" size="90 20" value="Interactive " 
      vc="acqi" style="Plain"
      vq="acqmode"
      show="$VALUE=(acqmode='') if $VALUE=0 then $VALUE=-1 endif"
      fg="black" bg="yellow" point="12" font="Dialog" />
   <button  loc="450 0" size="90 20" value="Sweep Tune" 
      vc="qtune(20)" style="Plain"
      vq="acqmode"
      show="$VALUE=(acqmode='') if $VALUE=0 then $VALUE=-1 endif"
      fg="black" bg="cyan" point="12" font="Dialog" />
  </group>
</actionpanel>
